{
  "version": 2,
  "buildCommand": "cd server && npm install && npm run migrate && cd ../client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install --prefix server && npm install",
  "cleanUrls": true,
  "git": {
    "deploymentEnabled": false
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/permanent-deletions",
      "schedule": "0 2 * * *"
    }
  ]
}
