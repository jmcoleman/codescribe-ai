{
  "version": 2,
  "buildCommand": "npm install --prefix client && cd client && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install && npm install --prefix server",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    }
  }
}
