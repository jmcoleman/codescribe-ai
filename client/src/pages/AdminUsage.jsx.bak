                            </tr>
                          ))}
                          {/* Authenticated Users */}
                          {stats.topUsers.map((user, index) => (
                            <tr
                              key={`user-${user.userId}`}
                              className="hover:bg-slate-50 dark:bg-slate-900/50 transition-colors"
