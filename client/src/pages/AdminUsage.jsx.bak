                      {stats.topIPs.length === 0 ? (
                        <tr>
                          <td colSpan="3" className="px-6 py-8 text-center text-slate-600">
                            No data available
                          </td>
                        </tr>
                      ) : (
                        stats.topIPs.map((ip, index) => (
                          <tr
                            key={ip.ipAddress}
                            className="hover:bg-slate-50 dark:bg-slate-900/50 transition-colors cursor-pointer"
                            onClick={() => fetchIPDetails(ip.ipAddress)}
                          >
                            <td className="px-6 py-4">
                              <div className="flex items-center gap-3">
                                <div className="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
